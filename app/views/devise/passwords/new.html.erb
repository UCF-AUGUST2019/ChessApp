<div class="devise_wrapper row", style="height:100%;">
  <div class="devise-box col-sm-6 offset-sm-3 text-center">
    <h2 class="mt-2">Forgot your password?</h2>
    <hr />
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
      <br />
        <%= f.submit "Send me reset password instructions", class: "btn-primary btn btn-d mb-2", style: "width: auto;" %>
      </div>
    <% end %>
    <br />
    <%= render "devise/shared/links" %>
  </div>
</div>
