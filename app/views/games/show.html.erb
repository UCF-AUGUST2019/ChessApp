<div id="show_game">
	<div class="chessboard">
		<% (1..8).each do |y| %>
			<div class="row">
				<% (1..8).each do |x| %>
					<div class="<%= (x + y).even? ? 'black' : 'white' %> space">
						<% @game.pieces.where(x_pos: x, y_pos: y).each do |piece| %>
							<% if piece.player_id == @game.white_id %>
								<span class="<%= piece.render %> white piece"></span>
							<% else %>
								<span class="<%= piece.render %> red piece"></span>
							<% end %>
						<% end %>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
	<div class="gamestats">
		<h3>Game Name:</h3>
			<%= @game.name %>
			<br />
		<h3>White:</h3>
			<%= @game.white_id %>
			<br />
		<h3>Black:</h3>
			<%= @game.black_id %>
			<br />
		<h3>Turn:</h3>
			<%= @game.turn %>
			<%= @game.turn.odd? %>
			<%= @game.turn.even? %>
	</div>
</div>
